<div class="container box-lessons-date box-lessons-container text-center">
  <h1><%= @box.name %></h1>
  <div class="row">
    <div class="col-12">
      <%= simple_form_for :search, url: box_box_lessons_path(@box), method: :get do |f| %>

          <input type="date" id="start" name="lesson_start"
             value="<%= session[:lesson_start] %>"
             min="<%= Date.today %>" max="2024-12-31">
          <button name="button" type="submit" class="btn btn-flat">
            <i class="fas fa-search"></i>
          </button>

      <% end %>
    </div>

  </div>
  <div class="row">
    <% @box_lessons.each do |box_lesson| %>
      <%= render "card_box_lesson", box_lesson: box_lesson %>
    <% end %>
  </div>
</div>

<%= render "confirmation_modal", booking: @booking %>
