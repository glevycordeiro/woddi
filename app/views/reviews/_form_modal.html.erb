<% bookings.each do |booking| %>
<div class="modal fade" id="booking<%= booking.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">How would you rate your experience with <%= booking.box.name %>?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for([booking, review]) do |f| %>
          <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience", input_html: { class: 'review-rating' } %>
          <%= f.input :description, label: "Drop down a line (Optional)", class: "review-write" %>
          <div class="btn-woddi-sm-review-location">
            <%= f.submit :Submit, class: "btn btn-woddi-sm" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>
