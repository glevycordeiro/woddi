<div class="container boxes-container">
  <div class="new-review-container">
    <div class="review-info">
      <h2>How would you rate your experience with <%= @booking.box.name %>?</h2>
      <div class="review-form">
        <%= simple_form_for([@booking, @review]) do |f| %>
          <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience", input_html: { class: 'review-rating' } %>
          <%= f.input :description, class: "review-write" %>
          <%= f.submit :Submit, class: "btn btn-woddi-sm" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
